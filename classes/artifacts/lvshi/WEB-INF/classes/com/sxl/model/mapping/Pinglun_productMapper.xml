<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sxl.dao.Pinglun_productDao">
	<resultMap id="BaseResultMap" type="com.sxl.model.Pinglun_product">
		<id column="productId" property="productId"/>
		<id column="customerId" property="customerId"/>
		<id column="content" property="content"/>
		<id column="insertDate" property="insertDate"/>
	</resultMap>
	
	<insert id="insert">
		insert into t_pinglun_product(productId,customerId,content,insertDate) values(#{productId},#{customerId},#{content},#{insertDate})
	</insert>
	
	<update id="update">
	 update t_pinglun_product
	 <trim prefix="set" suffixOverrides=",">
	  <if test="productId!=null">productId=#{productId},</if>
	  <if test="customerId!=null">customerId=#{customerId},</if>
	  <if test="content!=null">content=#{content},</if>
	  <if test="insertDate!=null">insertDate=#{insertDate},</if>
	 </trim>
	 where id=#{id}
	</update>
	<select id="getById" resultMap="BaseResultMap"
		parameterType="com.sxl.model.Pinglun_product">
		select * from t_pinglun_product where id=#{id}
	</select>
	
	<delete id="delete">  
        delete from t_pinglun_product where id=#{id}
	</delete>
	<select id="queryForList" resultMap="BaseResultMap"
		parameterType="com.sxl.model.Pinglun_product">
		select * from t_pinglun_product where 1=1 
	</select>
	<select id="countAll" resultType="java.lang.Integer" parameterType="com.sxl.model.Pinglun_product">
		select count(1) from t_pinglun_product where 1=1 
	</select>
</mapper>
